body {
	background-color white
	color body_text_color

	font-size base_vw_font_size
	font-text()

	+tablet() {
		font-size base_vw_font_size * tablet_multiplier
	}

	+mobile() {
		font-size base_vw_font_size * 3
	}
}

h1, h2, h3, h4, h5, h6 {
	line-height 2
	font-header-light()
	font-weight normal
	margin 0

	&[id] {

		&:before {
			display block
			content ''
			margin-top -(top_bar_height)
			height top_bar_height
			visibility hidden
			pointer-events none
		}

		a {
			color inherit
			text-decoration none
			position relative

			&:after {
				@extend .icon, .icon-anchor:before
				abs-vcenter()

				margin-left 0.75em

				font-size 0.6em

				opacity 0
				transition opacity 0.3s ease-out

				.ie8 & {
					margin-top -0.5em
				}
			}

			&:hover:after {
				opacity 1
			}
		}

		&:target a:after {
 			opacity 1
 		}

	}
}

h1, h2, h3, h4 {
	text-align center
	color ecogreen
}

h1 {
	font-size 3em
	letter-spacing 0.025em

	+mobile() {
		font-size 2.5em
	}
}

h2 {
	font-size 2em
}

h3 {
	font-size 1.75em
}

h4 {
	font-size 1.5em
}

h5 {
	font-size 1.25em
}

h6 {
	font-size 1em
	font-header()
}

p {
	font-size 1em
	line-height 1.5
	margin 0 0 1em
}

ul, ol, dl {
	list-style none
	margin 0
	padding 0
	margin-bottom 1em
}

li {
	margin-left 1em
	line-height 1.5
	position relative
	padding-left 2em

	&:before {
		position absolute
		top 0
		left 0
		line-height inherit
		padding-right 1em
		color ecogreen
	}
}

ul {
	li {
		@extend .icon-circle

		&:before {
			@extend .icon
			line-height inherit
			font-size 0.9em
		}
	}
}

ol {
	counter-reset ol-counter

	li {
		&:before {
			content counter(ol-counter) "."
			counter-increment ol-counter
		}
	}
}

dl {
	cf()
	line-height 1.5
}

dt {
	color ecogreen
	float left
	clear left
	margin-right 1em

	&:after {
		content ':'
	}
}

dd {
	float left
	margin 0
}

a {
	display inline-block
	color ecogreen
	text-decoration none

	&:hover,
	&:focus {
		text-decoration underline
		outline none
	}

	&.button-link {
		background-color ecogreen
		color white
		padding 0.25em 1em
		text-decoration none !important
		border-radius 3px
		margin 1em auto

		&:hover,
		&:focus {
			text-decoration underline !important
		}

		&.large {
			font-size 2em
		}
	}
}

.full-image {
	width 100%
	height auto
	margin 1em 0
}

.full-image-list {

	.full-image {
		&:not(:first-child) {
			position absolute
		}

		&.slick-slide {
			position relative
		}
	}

	&.slider {

		.slick-prev, .slick-next {
			width 0.36em
		}
	}
}

.captioned-image {
	margin 0 0 1em

	img, video {
		width 100%
	}

	.caption {
		font-header-light()
		font-size 1.25em
		font-style normal

		p {
			margin 0
		}
	}
}

.call-to-action {
	text-align center
	margin 2em 0
}

.page {
	overflow hidden
	padding-top top_bar_height

	.ie8 & {
		padding-top 50px
	}

	+tablet() {
		padding-top top_bar_height * tablet_multiplier
	}

	+mobile() {
		padding-top (1.25 * (1.4 + 2 * (1 - golden_ratio)))em
	}

}

.content-container {
	wide-content()
}

.text-content {
	narrow-content()

	a {
		text-decoration underline
	}
}

.svg-fallback {
	display none !important

	.ie8 & {
		display block !important
	}
}

.ie8 img {
	filter unquote('gray')
}

.ie8 .svg {
	display none !important
}

.ie8 {
	h1, h2, h3, h4, li:before, dt, a {
		color ecogreen_ie8
	}
}
