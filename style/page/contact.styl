.contact-content {
	margin-bottom 3em
}

.contact-form {
	overflow hidden
	margin-bottom 4em

	h1,
	.success p {
		font-header-light()
		color ecogreen
		font-size 1.5em
		text-align left
	}

	.success {
		display none
	}

	&.sent-success {
		form,
		> h1 {
			display none
		}

		.success {
			display block
		}
	}
}

.contact-info {
	cf()

	dt, dd {
		margin-bottom 1em
	}

	dt {
		column(0.18, gutter: 0)

		+below(4) {
			clear left
		}

		+mobile() {
			width auto
		}
	}

	dd {
		column(0.3, gutter: 3)

		+below(4) {
			column(0.6, offset: 0.1)
			margin-bottom 1em
		}

		+mobile() {
			clear left
			width auto
			margin-top 0.2em
		}
	}
}
