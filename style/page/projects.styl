.project-list {
	unstyled-list()
	cf()

	> li {
		column(1/2, cycle: 2)
		position relative

		+mobile() {
			stack()
		}

		.ie8 & {
			float none
			display inline-block
			margin-right 0
			vertical-align top
		}

		.icon {
			font-size 3.5em
			color ecogreen
			position absolute
			top 0.6em
			left 0

			.ie8 & {
				color ecogreen_ie8
			}
		}
	}

	h2 {
		margin 1em 0 0.5em 2.5em
		text-align left
	}
}
