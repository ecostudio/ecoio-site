.services-slider {
	full-from-narrow()
	full-shadow()

	&.slider1 {
		background-color services_green
	}

	&.slider2 {
		background-color services_blue
	}

	&.slider3 {
		background-color services_red
	}

	.slide {
		height 25em

		+mobile() {
			height 30em
		}
	}

	.slide-text {
		abs-vcenter()
		z-index 2
		left (hero_icon_size * 2)

		width (golden_ratio * 100)%

		text-align center

		h1, h2, li, p, li:before {
			color white
		}

		h1, h2 {
			line-height 1.3
			margin-bottom 0.5em
		}

		h1 {
			font-size 2.5em
		}

		p, li {
			font-size 1.3em
		}

		li {
			text-align left
			margin-bottom 0.5em
		}

		.ie8 & {
			margin 4em
		}

		+below(4) {
			width auto
			margin-top 0
			right (hero_icon_size * 2)
		}

		+mobile() {
			left (hero_icon_size)
			right hero_icon_size
		}
	}

	.decor {
		abs-vcenter()
		right hero_icon_size
		width (golden_ratio * 100)%
		max-height 80%
		z-index 1

		.ie8 & {
			right 4em
		}

		+below(4) {
			right -20%
			max-height 60%

			.ie8 & {
				right -20%
			}
		}
	}
}
