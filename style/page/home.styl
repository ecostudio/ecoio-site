.services-content {

	h1 {
		height (golden(3, false))vw
		line-height @height

		+mobile() {
			height auto
			line-height 2.5
		}
	}
}

.services {
	cf()
	unstyled-list()
	text-align center

	> li {
		column(1/3, cycle: 3, gutter: golden(5, false)vw)

		.ie8 & {
			margin 0
			padding-right 2%
			box-sizing border-box
		}

		+mobile() {
			stack()
		}
	}

	a {
		color inherit
		text-decoration none
		width 100%

		&:hover .description,
		&:focus .description {
			right 0
		}
	}

	h2 {
		height (golden(4))vw
		margin 0
		font-size 1.575em
		line-height 1
		color body_text_color

		.ie8 & {
			height 50px
		}

		+mobile() {
			height auto
		}
	}

	.image {
		image-container(none, none)
		decorinfo-panel()

		margin (golden(4))vw 0 (golden(3))vw
		border-radius 3px

		.info {
			color #fff
			text-align left
			box-sizing border-box
			padding 1em

			li:before {
				color #fff
			}
		}

		&:hover {

			.marketing-tablet,
			.webdesign-mobile {
				top 100%
			}

			.marketing-magnifier {
				top -100%
			}

			.dev-prompt {
				transform scale(0)
			}

			.dev-windows {
				transform scale(0)
			}
		}
	}
}

.marketing-magnifier {
	transition top animtime_decorinfo_panel animdelay_decorinfo_panel ease

	.image:hover & {
		top -100%
	}
}

.services-webdesign .image {
	background-color services_blue
}

.services-marketing .image {
	background-color services_green
}

.services-cms .image {
	background-color services_red
}

.partners-content {
	full-shadow()

	+mobile() {
		full-from-wide()
	}
}

.partners {
	unstyled-list()

	display table
	border-collapse separate

	width 100%
	height (golden(3, false))vw

	.ie8 & {
		height 130px
		border-spacing 30px
		margin-left -15px
	}

	+tablet() {
		height (golden(2))vw
	}

	+mobile() {
		display block
		box-sizing border-box
		height 8em
		overflow-x auto
		overflow-y hidden
		line-height @height
		white-space nowrap
		padding 0 page_margin_small
	}

	li {
		display table-cell
		vertical-align middle
		padding-left (golden(4, false))vw

		+mobile() {
			display inline-block
		}

		a {
			transition transform 0.2s ease

			&:hover,
			&:focus {
				transform scale(1.1)
				outline none
			}

			+mobile() {
				display inline-block
				image-container(left, middle)
			}
		}

		&:first-child {
			padding-left 0
		}

		img {
			width 100%
		}
	}
}
