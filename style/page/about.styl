.team-list {
	unstyled-list()
	cf()

	.team-member {
		column(1/2, cycle: 2)
		margin-bottom 2em
		box-shadow 1px 1px 3px #ccc

		+mobile() {
			stack()
		}

		.ie8 & {
			margin-right 0
		}

		h3 {
			text-align left
			line-height 1.25
		}
	}
}

.team-member-media {
	column(1/3)
	image-container()
}

.team-member-data {
	column(2/3)
	padding 1em 0

	.ie8 & {
		margin-right 0
	}
}

.team-member-field {
	font-header-light()
	font-size 1.5em

	+tablet() {
		font-size 1.25em
	}
}


.team-member-icons {
	unstyled-list()
	font-size 1.75em

	li {
		display inline-block
		margin-right 0.5em
		cursor pointer

		i[data-title] {
			position relative

			&:after {
				content attr(data-title)
				abs-hcenter()
				top -100%
				white-space nowrap

				padding 0.25em 0.5em
				border-radius 3px
				box-shadow 1px 1px 5px #777

				font-text()
				font-size 0.6em
				color white
				background-color ecogreen

				pointer-events none

				opacity 0
				transition opacity 0.3s ease-out, top 0.3s ease-out

				.ie8 & {
					display none
					left 0
					background-color #555
				}
			}

			&:hover, &:focus {
				z-index z_team_icon_hover
				outline none
				color ecogreen

				&:after {
					opacity 1
					top -120%

					.ie8 & {
						display block
					}
				}

				.ie8 & {
					color #555
				}
			}

			&:hover {
				z-index z_team_icon_hover + 1
			}
		}
	}
}
