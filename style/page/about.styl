.team-list {
	unstyled-list()
	cf()

	.team-member {
		column(1/2, cycle: 2)
		margin-bottom 2em
		box-shadow 1px 1px 3px #ccc

		+mobile() {
			stack()
		}

		.ie8 & {
			margin-right 0
		}

		h3 {
			text-align left
			line-height 1.25
		}

		a {
			text-decoration none

			&:hover {
				text-decoration underline
			}
		}

		&:hover, &.highlight {

			.primary-media {
				opacity 0
			}

			.secondary-media {
				opacity 1
			}
		}
	}
}

@keyframes billeg {
	0% {
		transform rotateZ(-30deg)
	}
	100% {
		transform rotateZ(30deg)
	}
}

.team-member-media {
	column(1/3)
	image-container()
	position relative
	padding-top 1em

	.media-replacement {
		color ecogreen
		font-size 7em
		abs-center()

		.ie8 & {
			color ecogreen_ie8
			top 15%
		}

		.threed-elem {
			animation billeg 1s ease-out infinite alternate
		}

		& + img, & + video {
			visibility hidden
		}
	}

	.primary-media {
		position relative
		opacity 1
		transition opacity 0.2s ease-out
	}

	.secondary-media {
		abs-center()
		margin-top 0.5em
		opacity 0
		transition opacity 0.2s ease-out
		border 1px solid #eee

		.ie8 & {
			display none
		}
	}
}

.team-member-data {
	column(2/3)
	padding 1em 0

	.ie8 & {
		margin-right 0
	}
}

.team-member-field {
	font-header-light()
	font-size 1.5em

	+tablet() {
		font-size 1.25em
	}
}


.team-member-icons {
	unstyled-list()
	font-size 1.75em

	li {
		display inline-block
		margin-right 0.5em
		cursor pointer

		i[data-title] {
			position relative

			&:after {
				content attr(data-title)
				abs-hcenter()
				top -100%
				white-space nowrap

				padding 0.25em 0.5em
				border-radius 3px
				box-shadow 1px 1px 5px #777

				font-text()
				font-size 0.6em
				color white
				background-color ecogreen

				pointer-events none

				opacity 0
				transition opacity 0.3s ease-out, top 0.3s ease-out

				.ie8 & {
					display none
					left 0
					background-color #555
				}
			}

			&:hover, &:focus {
				z-index z_team_icon_hover
				outline none
				color ecogreen

				&:after {
					opacity 1
					top -120%

					.ie8 & {
						display block
					}
				}

				.ie8 & {
					color #ecogreen_ie8
				}
			}

			&:hover {
				z-index z_team_icon_hover + 1
			}
		}
	}
}

.manifesto-section {
	position relative

	margin 1em 0
	padding 2em 6em
	border-radius 3px

	background-color #f8f8f8

	+mobile() {
		padding 2em
	}

	h3 {
		font-size 1.5em
		line-height 1
		margin-bottom 0.5em
		text-align left
	}

	.captioned-image {
		float left
		width (golden_ratio * 100)%
		margin-right 2em
		margin-bottom 0

		img {
			width 100%
		}

		+mobile() {
			float none
			width 100%
			margin 0 0 1em
		}
	}

	&:before, &:after {
		position absolute
		font-size 3em
	}

	&:before {
		@extend .icon, .icon-quote-left:before
		top 0.66em
		left 0.66em

		+mobile() {
			top -0.33em
			left 0
		}
	}

	&:after {
		@extend .icon, .icon-quote-right:before
		bottom 0.66em
		right 0.66em

		+mobile() {
			bottom -0.33em
			right 0
		}
	}

}
