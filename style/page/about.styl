.team-list {
	unstyled-list()
	cf()

	.team-member {
		column(1/2, cycle: 2)
		margin-bottom 2em

		h3 {
			text-align left
			line-height 1.25
		}
	}
}

.team-member-media {
	column(1/3)
	shift(-2/3)
	image-container()

	img {
		box-shadow 1px 1px 3px #ccc
	}
}

.team-member-data {
	column(2/3)
	shift(1/3)
	padding 1em 0
}

.team-member-field {
	font-header-light()
	font-size 1.5em
}


.team-member-icons {
	unstyled-list()
	font-size 1.75em

	li {
		display inline-block
		margin-right 0.5em
	}
}
